{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    "lib": ["DOM", "ES2020"],

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src", "dist/stt-processor.js"]
}
